@page
@model StoreTask.Razor.Pages.Clients.CreateModel
@{
    ViewData["Title"] = "Create Client";
}
<h1>Create Client</h1>
<br />
<hr />

<form asp-action="Create" class="mt-3">

    <div class="form-group">
        <label class="col-sm-2 col-form-label" asp-for="ClientVM.Code"></label>
        <input asp-for="ClientVM.Code" class="form-control" />
        <span asp-validation-for="ClientVM.Code" class="text-danger"></span>
    </div>

    @* <partial name="PartialViews/_CreateUpdatePartial" model="@Model.ClientVM" /> *@


    <div class="form-group">
        <label class="col-sm-2 col-form-label" asp-for="ClientVM.Name"></label>
        <input asp-for="ClientVM.Name" class="form-control" />
        <span asp-validation-for="ClientVM.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-label" asp-for="ClientVM.State"></label>
        <select asp-for="ClientVM.State" class="form-select"
                asp-items="Html.GetEnumSelectList<ClientState>()">
            <option value=""> Select Client State </option>
        </select>
    </div>
    <div class="form-group mb-4">
        <label class="col-sm-2 col-form-label" asp-for="ClientVM.Class"></label>
        <select asp-for="ClientVM.Class" class="form-select"
                asp-items="Html.GetEnumSelectList<ClientClass>()">
            <option value=""> Select Client Class </option>
        </select>
    </div>

    <input type="submit" value="Create" class="btn btn-primary"/> |
    <input type="reset" value="Clear" class="btn btn-secondary"/> |
    <a class="btn btn-dark" asp-page="Index">Back To List</a>
</form>
