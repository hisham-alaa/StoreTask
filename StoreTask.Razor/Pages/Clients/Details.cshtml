@page
@model StoreTask.Razor.Pages.Clients.DetailsModel
@{
}
<h1>Client Details</h1>

<br />
<hr />


<div class="container">
    <div class="row">
        <div class="col">Name : @Model.Client.Name</div>
        <div class="col">Code : @Model.Client.Name</div>
        <div class="w-100"></div>
        <div class="col">Class : @Model.Client.Class</div>
        <div class="col">State : @Model.Client.State</div>
    </div>
</div>
@if (Model.Client.Products.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(c => c.Client.Products.ElementAt(0).Name)</th>
                <th>@Html.DisplayNameFor(c => c.Client.Products.ElementAt(0).Description)</th>
                <th>@Html.DisplayNameFor(c => c.Client.Products.ElementAt(0).IsActive)</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Client.Products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.IsActive</td>
                    <td>
                        <a asp-page="Update" asp-route-id="@Model" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-page="Delete" asp-route-id="@Model" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        There Is No Products Related to this Client!
    </div>
}
